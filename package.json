    "docs:preview": "nr -C docs docs:preview",
    "deploy": "npm run build && npm run docs:build && npm run docs:deploy",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "nr release:3",
    "release:2": "nr -C packages/vue2 release",
    "release:3": "nr -C packages/vue3 release",
    "test": "vitest"
  },
  "devDependencies": {
