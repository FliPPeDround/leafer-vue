    "build:3": "nr -C packages/vue3 build",
    "dev:3": "nr -C packages/vue3 dev",
    "build:2": "nr -C packages/vue2 build",
    "dev:2": "nr -C packages/vue2 dev",
    "play": "nr -C playground dev",
